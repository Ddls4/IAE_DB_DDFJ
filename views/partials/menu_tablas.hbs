<div class="main">
    <div class="row">
        <aside class="sidebar border-right col-3 menu">
            <div class="titulo">
                <h3>Configuracion</h3>
            </div>
            <div class="generador">
                <div class="generador_nombre">
                    <form id="columnForm">
                        <label for="numColumns">Número de Columnas:</label>
                        <input type="number" id="numColumns" name="numColumns" min="1" max="10" value="3">
                        <button type="button" onclick="generateColumnInputs()">Crear Nombres</button>
                    </form>
                </div>

                <div id="columnNames"></div>
                <button type="button" onclick="createTable()">Crear Tabla</button>

            </div>
            <div class="agregador">
                <div id="rowData" style="display: block;">
                    <h2>Agregar Información a la Tabla</h2>
                    <div id="rowInputs"><input type="text" placeholder="Dato para Columna 1" id="rowData1"><input type="text" placeholder="Dato para Columna 2" id="rowData2"><input type="text" placeholder="Dato para Columna 3" id="rowData3"></div>
                    <button type="button" onclick="addRow()">Agregar Fila</button>
                </div>
            </div> 
    
        </aside>
        <main class="col-8">
            <div id="tableContainer"></div>
        </main>
    </div>
</div>
